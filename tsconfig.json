{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "typeRoots": [ "node_modules/@types" ],
        "types": ["node"],
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": "dist/src/",
        "watch": true,
        "inlineSource": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "typings"
    ]
}