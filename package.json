{
  "name": "ts-node-express-js",
  "description": "REST API via Typescript & Express.js",
  "version": "0.0.5",
  "private": true,
  "scripts": {
    "start": "ts-node --inspect=5858 ./src/index.ts",
    "test:api": "jest --forceExit",
    "lint": "./node_modules/.bin/tslint --type-check --project tsconfig.json './src/**/*.ts'",
    "watch": "tsc --watch"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/api/**/*.(ts|js)"
    ]
  },
  "dependencies": {
    "@decorators/express": "^1.3.1",
    "body-parser": "~1.13.2",
    "bottlejs": "^1.6.1",
    "bunyan-format": "^0.2.1",
    "compression": "^1.6.2",
    "cookie-parser": "~1.3.5",
    "dotenv": "^4.0.0",
    "es6-shim": "^0.35.1",
    "express": "~4.13.1",
    "express-bunyan-logger": "^1.3.2",
    "express-winston": "^2.0.0",
    "glob": "^5.0.14",
    "joi": "^10.6.0",
    "jsonwebtoken": "^7.4.3",
    "lodash": "^3.10.1",
    "mongodb": "^2.2.10",
    "nodemon": "*",
    "reflect-metadata": "^0.1.8",
    "ts-node": "*",
    "typescript": "*",
    "uuid": "^3.1.0",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.0.36",
    "@types/lodash": "^4.14.85",
    "@types/mongodb": "^2.2.11",
    "@types/node": "^8.0.20",
    "@types/jest": "^21.1.8",
    "@types/supertest": "^2.0.3",
    "supertest": "^3.0.0",
    "ts-jest": "^21.2.4",
    "tslint": "^5.6.0"
  }
}
