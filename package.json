{
  "name": "ts-node-express-js",
  "description": "REST API via Typescript & Express.js",
  "version": "0.0.5",
  "private": true,
  "scripts": {
    "start": "ts-node --inspect=5858 ./src/index.ts",
    "test:api": "jest --forceExit",
    "lint": "./node_modules/.bin/tslint --project tsconfig.json './src/**/*.ts'",
    "modclean": "./node_modules/.bin/modclean",
    "watch": "tsc --watch"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/api/**/*.(ts|js)"
    ]
  },
  "dependencies": {
    "@decorators/express": "1.3.1",
    "body-parser": "1.13.2",
    "bottlejs": "1.6.1",
    "bunyan": "^1.8.12",
    "compression": "1.6.2",
    "cookie-parser": "1.3.5",
    "dotenv": "4.0.0",
    "es6-shim": "0.35.1",
    "express": "4.13.1",
    "glob": "5.0.14",
    "joi": "10.6.0",
    "jsonwebtoken": "7.4.3",
    "lodash": "3.10.1",
    "mongodb": "2.2.10",
    "nodemon": "*",
    "reflect-metadata": "0.1.8",
    "ts-node": "*",
    "typescript": "*",
    "uuid": "3.1.0"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.4",
    "@types/express": "4.11.0",
    "@types/jest": "21.1.8",
    "@types/joi": "^13.0.3",
    "@types/lodash": "4.14.85",
    "@types/mongodb": "2.2.11",
    "@types/node": "8.5.2",
    "@types/supertest": "2.0.3",
    "modclean": "^2.1.2",
    "supertest": "3.0.0",
    "ts-jest": "21.2.4",
    "tslint": "5.6.0"
  }
}
